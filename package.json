{
    "name": "bixinho",
    "module": "index.ts",
    "type": "module",
    "private": true,
    "devDependencies": {
        "@types/bun": "latest",
        "esbuild": "^0.19.0"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "scripts": {
        "build:web": "esbuild src/web.ts --bundle --outfile=bundle.js --format=esm --platform=browser --loader:.ts=ts --external:bun:ffi --external:fs --external:node:process",
        "serve": "bun run build:web && bun server.ts"
    }
}
